.header
	background-color: $header
	background-image: url('../../f/img/header/bg1.jpg')
	background-position: 50% 0%
	background-repeat: no-repeat
	position: fixed
	width: 100%
	left: 0
	top: 0
	z-index 100

	&__inner
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		@media $tablet
			align-items: center
	&-left

		flex: 0 0 30% //!!!
		max-width: 30%
		&__inner
			@media $desktop
				display: flex
				align-items: center
		&__text
			color: #097EA3
			font-size: 22px
			line-height: 1.6em
			padding-top 30px
			font-weight: 400
			display: none
			@media $desktop
				font-weight: 600;
				font-size: 16px;
				line-height: 1.1em
				text-transform: uppercase;
				padding-top 0
			@media $beforePhoneS
				font-size: 12px
	&__logo
		width: 233px
		@media $desktop
			margin-right 20px
		@media $tablet
			height: 100px
			width: 100px
		a
			display: block
			@media $tablet
				height: 100px
				width: 100px
	&-right
		display: flex
		flex-direction: column
		align-items: flex-end

		flex: 0 0 70%
		max-width: 70%

		&__info
			display: flex
			align-items: center
			margin: 40px 0 45px auto
			justify-content: flex-end
			@media $tablet
				justify-content: flex-start
				margin: 10px 0 20px
			div + div
				margin-left 30px
			div
				text-transform: uppercase
				font-size: 12px
				font-weight: 700
				@media $tablet
					font-size: 14px
				&:nth-child(4)
					margin-bottom -2px
					a
						&:hover
							&::before, &::after
								display: none
				a
					display: inline-flex
					position: relative
					text-decoration: none
					color: #55DBF9
					color: $darkblue
					transition: 0.3s
					&::before
						content: ""
						display: flex
						position: absolute
						height: 0.02rem
						width: 0
						background: $darkblue
						transition: width 0.4s ease-in-out, left 0.4s ease-in-out
						left: 50%
						bottom: -0.01rem
					&::after
						content: ""
						display: flex
						position: absolute
						height: 0.02rem
						width: 0
						background-color: $darkblue
						transition: width 0.4s ease-in-out
						left: 50%
						bottom: 0
					&:hover::before
						width: 100%
						left: 0
						bottom: -0.01rem
						&:hover::after
							width: 50%
	&__menu
		max-width: 850px
		@media $desktop
			max-width: 85%
		&:hover .header__sublist, .header-left__text
			display: block
			@media $tablet
				display: none

		.header__list
			display: flex
			li
				padding: 0 40px
				flex: 0 0 25%
				max-width: 25%
				line-height: 1.2em
				position: relative
				@media $desktop
					padding: 0 15px
				&:hover .header__list-item
					background: red
				&._active
					.header__sublist
						@media $tablet
							display: block
							margin: 20px 0
							li
								margin-bottom 1em
								padding-left 1em
								a
									font-size: 14px
				a
					color: $white
					font-size: 15px
					font-weight: 700
					text-transform: uppercase  
					@media $desktop
						font-size: 12px
					@media $tablet
						font-size: 14px
						font-weight: 600
		.header__sublist
			display: none
			margin: 20px 0 50px
			li
				margin-bottom 20px
				flex 0 0 100%
				max-width: 100%
				padding: 0
				a
					font-weight: 400
					font-size: 14px
					line-height: 18px
					transition: 0.3s
					&:hover
						color: $blue
	&-news	
		&__inner
			position: relative
		&__img
			position: relative
		&__info
			position: absolute
			z-index 5
			top: 0
			left: 0
			bottom: 0
			right: 0
			max-width: 235px
			backdrop-filter: blur(30px)
			&:after
				content: ''
				position: absolute
				display: block
				background: $darkgray
				top: 0
				right: 0
				bottom: 0
				left: 0
				z-index: 0
				opacity 0.4
				
			@media $tablet
				//height: 75px
				max-width: 215px
				top: auto
				bottom: 0
				@media $tablet
					padding: 14px 30px
		&__date
			height: 50%
			font-size: 22px
			line-height: 1.1em
			font-weight: 400
			color: $white
			display: flex
			padding: 30px 45px
			position: relative
			z-index 5
			@media $tablet
				padding: 0
			span
				margin-top auto
		&__text 
			height: 50%
			background: $darkgreen
			padding: 40px 45px
			color: $white
			font-size: 20px
			line-height: 1.3em
			font-weight 400
			position: relative
			z-index 5
			@media $tablet
				display: none

//--------header-slider
.header-slider
	position: relative
	z-index 150	
	.header-news__inner
		@media $tablet
			height 300px
			img
				object-fit: cover
				width: 100%
				height: 100%
	&-wrap
		display: flex	
		justify-content: flex-end
		margin-top: -277px
		@media $desktop
			margin-top 50px
	@media $tablet
		width: 100%
	&-text
		display: none
		@media $tablet
			display: block
			background: $darkgreen
			color: $white
			padding: 35px 30px
		@media $phoneS
			padding: 25px 15px
		@media $beforePhoneS
			min-height: 400px
	&__title
		font-weight: 700
		font-size: 27px
		line-height: 1.2em
		text-transform: uppercase
		margin-bottom 10px
	&__subtitle
		font-weight: 400
		font-size: 22px
		line-height: 1.3em
		margin-bottom 30px
	&__text
		font-weight: 400
		font-size: 22px
		line-height: 1.3em
		padding-bottom 60px
	.owl-dots
		display: flex
		position: absolute
		bottom: 45px
		left: 50%
		transform: translateX(-50%)
	.owl-dot
		background: $lightgreen !important
		width: 15px
		height: 15px
		border-radius: 50%
		display: block
		position: relative
		z-index: 155
		&.active
			background: $white!important
	.owl-dot + .owl-dot
		margin-left 15px
.header-news
	position: relative
	.header-left__text
		display: block
.b-header-slide
	display: none
	@media $tablet
		display: block
	&.show 
		display: block

.b-header-slide--desktop
	@media $tablet
		display: none !important


.content-wrapper--mobile
	@media $tablet
		padding: 0


//-------burger-menu
.burger
	width: 25px
	height: 15px
	position: relative
	z-index 9999
	display: none	
	flex-direction: column
	justify-content: space-between
	transition: .4s
	@media $tablet
		display: flex
	div
		height: 2px
		width: 100%
		background: $white
		transition: .4s

.header-right__inner
	@media $tablet
		position: absolute
		background: $header
		left -5999px
		transition: .4s
		overflow-y: auto
		min-height: 100px
		top: 0
		width: 100%
		padding: 40px 0
		z-index 9999
		.header__list
			flex-direction: column
			li
				flex: 0 0 100%
				max-width: 100%
				margin-bottom 10px
		.header-right__info
			padding: 0 15px
			
.header-right
	&._active
		.header-right__inner
			left: 0
		.burger
			transition: .4s
			div
				position: absolute
				&:nth-child(2)
					display: none
				&:last-child
					transform: translateY(-50%) rotate(45deg)
					left: 0
					top: 50%
					transition: .4s
				&:first-child
					transform: translateY(-50%) rotate(-45deg)
					left: 0
					top: 50%
					transition: .4s

.header__list-item
	&._active
		@media $tablet
			> a
				border-bottom: solid 1px
		&:before
			content: ''
			position: absolute
			bottom: -91px
			left: 0
			width: 100%
			height: 20px
			background: $lightgreen
			display: block
			@media $tablet
				display: none


.header__menu
	&:hover
		.header__list-item
			&:hover > a
				@media $tablet
					color: $blue
			&._active
				&:before
					display: none
					

.header-news
	.header__list
		.header__sublist
			display: none
		.header__list-item._active
			display: block
			@media $tablet
				> a
					color: $blue!important

	.header__list-item
		&:hover
			&:before
				content: ''
				position: absolute
				bottom: -91px
				left: 0
				width: 100%
				height: 20px
				background: $lightgreen
				display: block
				@media $tablet
					display: none
		&:hover > a
			color: $white!important

	.header__menu
		&:hover
			.header__list-item
				&._active
					&:before
						display: block!important
						@media $tablet
							display: none!important