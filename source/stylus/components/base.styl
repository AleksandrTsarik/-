html,body,div,span,object,iframe,h1,h2,h3,h4,h5,h6,p,a,em,img,b,u,i,ol,ul,li,form,label,table,tbody,tfoot,thead,tr,th,td,input,textarea,button
	margin 0
	padding 0
	border none medium
html, body
	font-family 'Montserrat', Arial, sans-serif
	font-size 16px
	line-height 1.5
	background $white
	color $baseFont
html
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
img
	vertical-align bottom
	max-width: 100%
::-webkit-scrollbar
	@media $beforePhone
		width 10px
		height 5px
::-webkit-scrollbar-track
	@media $beforePhone
		box-shadow inset 0 0 5px #EEEEEE
::-webkit-scrollbar-thumb
	@media $beforePhone
		background-color #D6D6D6

*, *:focus, *:after, *:before
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-moz-box-sizing border-box
	box-sizing border-box
	outline none
input, textarea
	font-family 'Montserrat', Arial, sans-serif
	font-size 15px
	width: 100%
	background none
	border none medium
	resize none
	box-shadow none
	&::placeholder
		font-family 'Montserrat', Arial, sans-serif
		text-overflow ellipsis
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active
	-webkit-box-shadow: 0 0 0 30px white inset !important;
article,aside,footer,header,nav,section,canvas
	display block
ol, ul
	list-style none
a, button, input[type="submit"], input[type="button"], input[type="reset"], label
	border none medium
	outline none
	cursor pointer
	background none
	-webkit-text-decoration-skip objects
a, a:active
	text-decoration none
	color $linkFont
h1,h2,h3,h4,b,strong
	font-family $MuseoM
	font-weight normal
b,strong
	font-family 'Montserrat', Arial, sans-serif
	font-weight bold
sub, sup
	font-size 75%
	line-height 0
	position relative
	vertical-align baseline
sub
	bottom -0.25em
sup
	top -0.5em
video
	display inline-block
svg:not(:root)
	overflow hidden

body
	height: 100vh
	display: flex
	flex-direction: column

.page-container
	max-width 100%
	flex: 1 0 auto
	&--fix-header 
		padding-top: 233px
		@media $tablet
			padding-top 100px
.content-wrapper
	max-width 1440px
	margin 0 auto
	font-family 'Montserrat', Arial, sans-serif
	padding: 0 30px
	@media $phoneS
		padding: 0 15px

.b-title
	font-weight: 600
	font-size: 34px
	line-height: 0.99em
	color: $black
.d-none
	display: none