.footer
	background: $footer
	padding: 65px 0 110px
	&__list
		display: flex
		flex-wrap: wrap
	&__menu
		li
			a
				color: $darkgray
				font-size: 15px
				line-height: 1.3em
				font-weight: 400
				display: inline-flex
				position: relative
				text-decoration: none
				transition: .3s
				&:hover
						color: $black
		&--top
			margin-bottom: 35px
			@media $phone
				margin-bottom 0
	&__item
		&:nth-child(1)
			flex: 0 0 27%
			max-width: 27%
			@media $desktop
				order: 2
				flex: 0 0 50%
				max-width: 50%
			@media $phone
				flex: 0 0 100%
				max-width: 100%
				order: 3
		&:nth-child(2)
			flex: 0 0 27%
			max-width: 27%
			@media $desktop
				order: 3
				flex: 0 0 50%
				max-width: 50%
			@media $phone
				flex: 0 0 100%
				max-width: 100%
				order: 2
				margin-bottom 20px
		&:nth-child(3)
			flex: 0 0 46%
			max-width: 46%
			@media $desktop
				flex: 0 0 100%
				max-width: 70%
				margin-bottom 50px
				order: 1
			@media $phone
				max-width: 100%

		&-title
			color: $darkgray
			font-size: 15px
			line-height: 1.3em
			font-weight: 400
		&-link
			display: flex
			div
				margin-top 15px
			div + div
				margin-left 20px
	&-b
		&__strip
			display: flex
			align-items: center
			max-width: 38%
			margin-top -3em
			justify-content: space-between
			@media $desktop
				margin-top 0 
				max-width: 100%
				justify-content: left
			@media $phone
				flex-wrap: wrap
		&__left
			@media $desktop
				flex: 0 0 50%
				max-width: 50%
			@media $phone
				flex: 0 0 100%
				max-width: 100%	
				order: 2
		&__right
			@media $desktop
				flex: 0 0 50%
				max-width: 50%
			@media $phone
				flex: 0 0 100%
				max-width: 100%
				order: 1
				margin: 20px 0 20px -12px
.f
	&-form
		&-block
			&__input
				border-bottom: 1px solid #CAC7C7
				font-size: 15px 
				font-weight: 400
				line-height: 1.5em
				margin-bottom 25px
				height: 30px
			&__textarea
				margin-bottom 25px
				textarea
					border-bottom: solid 1px #CAC7C7
					height: 30px
			&__btn
				font-weight: 600
				font-size: 18px
				line-height: 1.2em
				color: $black
				transition: .5s
				display: block
				&:hover
					transform: scale(1.1)

		&__title
			font-weight: 700
			font-size: 16px
			line-height: 1.2em
			color: $black
			margin-bottom 20px
	
               