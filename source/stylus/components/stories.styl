.b
	&-stories
		&__top
			display: flex
			justify-content: space-between
			margin-bottom 45px
			&-img
				@media $tablet
					display: flex
					justify-content: flex-end
				img
					@media $tablet
						max-width: 50%
						
		&__title
			margin-top auto
			&-img
				max-width: 185px
		&-open
			&-text
				font-weight: 400
				font-size: 15px
				line-height: 1.3em
				color: $black
				padding-bottom 30px
				&--big
					font-weight 700
					font-size: 15px
					line-height: 1.3em
					color: $black
					padding-bottom 30px
			&-text-header
				font-weight: 700
				font-size: 21px
				line-height: 1.1em
				color: $black
				padding-bottom 30px
			&-block
				display: flex
				@media $tablet
					flex-direction: column
				&__foto
					flex: 0 0 275px
					max-width: 275px
					margin-right 40px
					margin-bottom 20px
					img
						padding-bottom 10 px
			&__head
				padding-bottom 30px
				img
					margin-bottom 15px
			&__signature
				color: $signature
				font-weight: 400
				font-size: 12px
				line-height: 1.3em
				display: block
			&__inner
				display: flex
				margin: 0 -35px
				justify-content: space-between
				@media $tablet 
					flex-wrap: wrap
			&__item
				padding: 0 35px
				display: block
				&:nth-child(1)
					@media $tablet 
						flex: 0 0 50%
						max-width: 50%
						order: 1
						margin-bottom 25px
				&:nth-child(2)
					@media $tablet 
						flex: 0 0 100%
						max-width: 100%
						order: 3
				&:nth-child(3)
					@media $tablet 
						flex: 0 0 50%
						max-width: 50%
						order: 2
						justify-content: flex-end
						display: flex
			&__content
				max-width: 939px
			&--back
				position: relative
				width: 60px
				height: 60px
				background: $green
				display: block
				transition: .4s
				margin-top 120px
				@media $tablet
					margin-top 30px
				&:after
					content: ''
					display: block
					position: absolute
					width: 40%
					height: 40%
					left: 60%
					top: 50%
					border-bottom: solid 2px $white
					border-left: solid 2px $white
					transform: translate(-50%,-50%) rotate(45deg)
					transition: .4s
				&:hover
					box-shadow: 0 0 4px rgba(black, 0.5)
					&:after
							border-color: #c7c7c7
			&__top
				border-bottom: 0.5px solid rgba(0, 0, 0, 0.5)
				margin-bottom 40px
				padding-bottom 70px
				@media $tablet
					padding-bottom 40px
					margin-bottom 10px
			&__title
				font-weight: 700
				font-size: 24px
				line-height: 1.2em
				color: $black
				padding-bottom 60px
			
			&__network
				display: flex
				margin-top 120px
				@media $tablet
					margin-top 30px
				&-item
					width: 60px
					height: 60px
					border: solid 1px $gray
					position: relative
					display: block
					transition: 0.5s
					img
						position: absolute
						left: 0
						right: 0
						top: 0
						bottom: 0
						margin: auto
						display: block
						transition: 0.5s
					&:hover img
						transform: scale(1.1)
					&:hover
						background: #e9e9e9
				&-right
					@media $tablet 
						display: flex
					.b-stories-open__network-item
						&:nth-child(1)
							border-bottom: 0
							@media $tablet 
								border-bottom: solid 1px $gray
								border-right: 0
						&:nth-child(2)
							border-bottom: 0
							@media $tablet 
								border-bottom: solid 1px $gray
								border-right: 0
				&-left
					.b-stories-open__network-item
						border-right: 0







//--------_blocks

.b
	&-stories
		&-top
			margin-bottom 30px
		&-middle
			margin-bottom 30px
		&__list
			column-count: 3
			margin: 0 -10px
			@media $desktop
				column-count: 2
			@media $beforePhoneS
				column-count: 1
		&__item
			break-inside: avoid
			display: block
			padding: 20px 10px 40px
			overflow: hidden

			&:hover .b-stories__img
				transform: scale(1.05)
			img
				width: 100%
		&-top
			overflow: hidden
		&__img
			overflow: hidden
			transition: 0.8s
		&-item
			&__title
				font-weight: 700
				font-size: 22px
				line-height: 1.2em
				color: $black
				margin-bottom 1em
			&__text
				font-weight: 400
				font-size: 14px
				line-height: 1.3em
				color: $black
			&__date
				font-weight: 600
				font-size: 14px
				line-height: 1.3em
				color: $black